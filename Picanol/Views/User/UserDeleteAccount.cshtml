@{
    Layout = "../Shared/_LoginLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <link href="~/Content/swinloader.css" rel="stylesheet" type="text/css" />
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title style="font-size:large">Belinnov Picanol</title>
    <style>
        body, html {
            margin: 0;
            padding: 0;
            height: 80%;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            font-family: Arial, sans-serif;
        }

        .container-fluid {
            display: none !important;
        }

        .header {
            text-align: center;
            margin-bottom: 20px;
        }

        #form-wrapper {
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
            border: 1px solid #ccc;
            padding: 30px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        form {
            display: flex;
            flex-direction: column;
            align-items: center;
        }

            form strong {
                margin-bottom: 10px;
            }

            form p {
                margin: 10px 0;
            }

        input[type="text"] {
            padding: 10px;
            width: 100%;
            max-width: 300px;
            box-sizing: border-box;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

        button {
            padding: 10px 20px;
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

            button:hover {
                background-color: #0056b3;
            }

        @@media (max-width: 600px) {
            #form-wrapper {
                width: 90%;
            }
        }
    </style>
</head>
<body>
    <div class="header">
        <h3 class="title" style="font-weight: bold; font-size:34px">Belinnov Picanol</h3>
    </div>

    <div id="form-wrapper">
        <form>
            <strong>Mobile Number</strong>
            <p>
                <input type="text" placeholder="Mobile Number" id="mobile">
            </p>
            <p>
                <button type="button" onclick="SaveProductGroup()">Remove</button>
            </p>
        </form>
    </div>
</body>
</html>

<script>

    function SaveProductGroup() {
        debugger;
        var Mobile = document.getElementById("mobile").value;
        var Data = {
            MobileNumber: Mobile,
        };
        if (Mobile == "") {
            swal("Please Enter Mobile Number");
            e.preventDefault();
        };
         $.ajax({

         beforeSend: function () {
             $('.spinner-wrapper').show()
         },
         type: "POST",  // method of sending data
         url: '@Url.Action("UserDelete", "User")', // name of PHP script
         data: Data, // parameter name and value
         success: function (data) {
         $('.spinner-wrapper').hide();
             if (data == "Success") {
                 location.reload();
             alert("User Deleted successfully");

         }
     },

 });
 }
</script>
<script src="~/material-dashboard-pro-html-v2.1.2/assets/js/core/jquery.min.js"></script>
