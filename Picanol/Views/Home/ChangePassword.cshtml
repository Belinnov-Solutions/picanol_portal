@model Picanol.Models.LoginDto

@{

    Layout = "../Shared/_LoginLayout.cshtml";
}

<style>
    #Shadow {
        border: 1px solid;
        box-shadow: 5px 10px #23238E;
    }
</style>
<br /><br />
<center><h2><font color="#c93e71"> Please Change Your Password! </font></h2></center>
<body>
    @*style="background-color: #f2f2f2;"*@
    <div class="container">
        <div id="Shadow" class="col-md-4 col-md-offset-4" style="background-color: #ffffff">
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger">
                    <p>Please fix the following errors listed below and try again.</p>
                    @Html.ValidationSummary(false)
                </div>
            }


            <br />
            @using (Html.BeginForm("ChangePassword", "Home", FormMethod.Post))
            {

                <div class="form-group">
                    <label for="Password">Enter New Password</label>
                    @Html.TextBoxFor(model => model.Password, new { @class = "form-control", @placeholder = "Enter New Password", @type = "password", @id = "Password", @required = "required" })

                </div>

                <div class="form-group">
                    <label for="ConfirmPassword">Confirm Password</label>
                    @Html.TextBoxFor(model => model.ConfirmPassword, new { @class = "form-control", @placeholder = "Confirm Password", @type = "password", @id = "ConfirmPassword", @required = "required" })
                    @Html.HiddenFor(model => model.UserID, new { id = "UserID" })
                    @Html.HiddenFor(model => model.EncryptedUserId, new { id = "UserID" })
                </div>

                <button type="submit" class="btn btn-default" onclick="myFunction()" style="background-color: #67C8FF;">Submit </button>
                @*<a href="@Url.Action("Index", "Home")" class="btn btn-primary btn-large" style="background-color: #67C8FF;"> Submit</a>*@
                <br /><br />
            }

        </div>

    </div>

    <br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br />

</body>

<script>
    function myFunction() {
        
    var x = document.getElementById("Password").value;
    if (x == "") {
        alert("Password must be filled out");
        event.preventDefault();
        return false;
    }
    var y = document.getElementById("ConfirmPassword").value;
    if (y == "") {
        alert("ConfirmPassword must be filled out");
        event.preventDefault();
        return false;
    }
    if (x != y) {
        alert("Password didn't matched!");
        event.preventDefault();
        return false;
    }
}
</script>