            if (enterDate != "") {
                var split = enterDate.split("/");
                var StartDate = split[0] + "/" + split[1] + "/" + split[2];
            }
            else {
                var StartDate = "";
            }
            var lastDate = $("#EndDate").val();
            if (lastDate != "") {
