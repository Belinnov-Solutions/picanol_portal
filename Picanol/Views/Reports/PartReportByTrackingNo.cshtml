@model Picanol.ViewModels.ReportsViewModel
<h2>Stock Report</h2>
<link href="~/Content/Loader.css" rel="stylesheet" type="text/css" />
<link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">

<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>


<div class="col-sm-4">
    <div class="form-group">
        @Html.LabelFor(p => p.FromDate, new { @class = "" })
        @Html.TextBoxFor(d => d.FromDate, "{0:dd/MM/yyyy}", new { id = "FromDate", @class = "form-control", maxlength = "500" })
    </div>
</div>

<div class="col-sm-4">
    <div class="form-group">
        @Html.LabelFor(p => p.ToDate, new { @class = "" })
        @Html.TextBoxFor(d => d.ToDate, "{0:dd/MM/yyyy}", new { id = "ToDate", @class = "form-control", maxlength = "500" })
    </div>
</div>



<div class="col-sm-4">
    <div class="form-group">
        <button type="submit" style="margin-top:25px" value="Submit" onclick="submit()" id="btnSearch" class="btn btn-info">
            Submit

        </button>
    </div>
</div>
<div class="row" id="divReport">
    <iframe id="ReportFrame" src="" width="100%" height="1000px" style="border: none"></iframe>

</div>
<div class="signal"></div>

<script type="text/javascript">


        $("#FromDate").datepicker({

            dateFormat: 'dd/mm/yy',
            changeMonth: true,
            changeYear: true,


        });
        $("#ToDate").datepicker({

            dateFormat: 'dd/mm/yy',
            changeMonth: true,
            changeYear: true,


        });
</script>

<script>


    function submit() {
       
        var FromDate = $("#FromDate").val();
        var ToDate = $("#ToDate").val();
        var src = '../ReportSet/PartByTrackingNo.aspx?';
        src = src + "FromDate=" + FromDate + "ToDate=" + ToDate;
        var iframe = '<iframe id="reportFrame" width="100%" height="800px" scrolling="no" frameborder="0" src="' + src + '" allowfullscreen></iframe>';
        $("#divReport").html(iframe);
    }


            

</script>
