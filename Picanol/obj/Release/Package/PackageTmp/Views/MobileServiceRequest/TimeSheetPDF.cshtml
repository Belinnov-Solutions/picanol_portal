    <div class="col-xl-12">
        <table rules="all" border="1" style="width:100%">

            <tr>
                <td align="center" colspan="3" style="font-size:large"><b>TIME SHEET</b></td>
            </tr>
            <tr>
                <td colspan="3">
                    <div class="text-left">&nbsp;&nbsp;Time Sheet No. : @Model.TimeSheet.TimeSheetNo</div>
                    <div class="text-right" style="margin-top: -20px">Date : @DateTime.Now.Date.ToShortDateString()</div>
                </td>
            </tr>
            <tr>
                <td colspan="3">

                    <b>
                        &nbsp;&nbsp;Customer : @Model.TimeSheet.CustomerName <br />
                        &nbsp;&nbsp;Customer Address : @Model.WorkOrder.CustomerAddress<br />
                        &nbsp;&nbsp;Start Date : @Model.TimeSheet.FromDate.ToShortDateString() <br />
                        &nbsp;&nbsp;End Date : @Model.TimeSheet.ToDate.ToShortDateString() <br />
                        &nbsp;&nbsp;Work Order No. : @Model.WorkOrder.WorkOrderNo
                    </b>

                </td>
            </tr>
            <tr>
                <th>&nbsp;&nbsp;Date</th>
                <th>&nbsp;&nbsp;Time (Hrs)</th>
                <th>&nbsp;&nbsp;Description</th>
            </tr>
            @foreach (var item in Model.WeekDates.Keys)
            {
                <tr>
                    <td colspan="3">&nbsp;&nbsp;Week : @item</td>
                </tr>

                foreach (var item1 in Model.WeekDates[item])

                {
                    <tr>
                        <td>&nbsp;&nbsp;@item1.WorkDate</td>
                        <td>&nbsp;&nbsp;@item1.TotalHours</td>
                        <td>&nbsp;&nbsp;@item1.Description</td>
                    </tr>
                }
            }
            <tr>
                <td colspan="3">
                    &nbsp;&nbsp;<b>Remarks :</b><br />
                    <div style="margin-left:10px">@Model.TimeSheet.Remarks</div>
                </td>
            </tr>
            <tr>
                <td colspan="3">
                    <div class="text-right">
                        Certified that the particulars given above are true and correct. <br />
                    </div>

                    <div class="text-right">


                        For Picanol India Pvt. Ltd.<br />
                        <img src="~/Content/Images/TimeSheetSignature/@Model.TimeSheet.UImagePath" width="100" height="100" /><br />
                        @Model.TimeSheet.UserName
                        <br />
                    </div>
                    @*<div ></div> IMAGE*@

                </td>
            </tr>
            <tr>
